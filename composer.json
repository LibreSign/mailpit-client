{
    "name": "libresign/mailpit-client",
    "description": "Mailpit API Client for PHP - Modern replacement for Mailhog",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "LibreSign Team",
            "email": "hello@libresign.coop"
        },
        {
            "name": "Remon van de Kamp",
            "email": "rpkamp@gmail.com",
            "role": "Original Mailhog client author"
        }
    ],
    "autoload": {
        "psr-4": {
            "LibreSign\\Mailpit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LibreSign\\Mailpit\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-iconv": "*",
        "php-http/httplug": "^1.0 || ^2.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "bamarni/composer-bin-plugin": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": true
        }
    },
    "scripts": {
        "lint": "find . -name \\*.php -not -path './vendor/*' -not -path './vendor-bin/*' -print0 | xargs -0 -n1 php -l",
        "cs:check": "vendor-bin/phpcs/vendor/squizlabs/php_codesniffer/bin/phpcs --standard=PSR2 src/",
        "cs:fix": "vendor-bin/phpcs/vendor/squizlabs/php_codesniffer/bin/phpcbf --standard=PSR2 src/",
        "phpmd": "vendor-bin/phpmd/vendor/phpmd/phpmd/src/bin/phpmd src text phpmd.xml",
        "phpstan": "vendor-bin/phpstan/vendor/phpstan/phpstan/phpstan analyze src/",
        "test:unit": "vendor-bin/phpunit/vendor/phpunit/phpunit/phpunit -c phpunit.xml.dist --testsuite unit --colors=always",
        "test:integration": "vendor-bin/phpunit/vendor/phpunit/phpunit/phpunit -c phpunit.xml.dist --testsuite integration --colors=always",
        "test:coverage": "XDEBUG_MODE=coverage vendor-bin/phpunit/vendor/phpunit/phpunit/phpunit -c phpunit.xml.dist",
        "post-install-cmd": [
          "@composer bin all install --ansi",
          "composer dump-autoload -o"
        ],
        "post-update-cmd": [
          "composer dump-autoload"
        ]
    }
}
