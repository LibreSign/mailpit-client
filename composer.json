{
    "name": "libresign/mailpit-client",
    "description": "Mailpit API Client for PHP - Modern replacement for Mailhog",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "LibreSign Team",
            "email": "hello@libresign.coop"
        },
        {
            "name": "Remon van de Kamp",
            "email": "rpkamp@gmail.com",
            "role": "Original Mailhog client author"
        }
    ],
    "autoload": {
        "psr-4": {
            "LibreSign\\Mailpit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LibreSign\\Mailpit\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-iconv": "*",
        "php-http/client-implementation": "^1.0",
        "php-http/httplug": "^1.0 || ^2.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "egulias/email-validator": "^2.1.23",
        "nyholm/psr7": "^1.2",
        "pdepend/pdepend": "^2.5",
        "php-http/curl-client": "^2.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpmd/phpmd": "^2.9.1",
        "phpstan/phpstan": "^0.12.64",
        "phpunit/phpunit": "10.5.x-dev",
        "symfony/mailer": "^5.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": "find . -name \\*.php -not -path './vendor/*' -print0 | xargs -0 -n1 php -l",
        "phpmd": "vendor/bin/phpmd src text phpmd.xml"
    }
}
